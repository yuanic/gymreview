<p id="notice"><%= notice %></p>


<h2> Find out more about your neighbourhood gym! </h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
        <td><%= gym.name %></td>
        <td><%= gym.address %></td>
        <td><%= gym.phone %></td>
        <td><%= gym.website %></td>
        <td><%= link_to 'Show', gym, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_gym_path(gym), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gym', new_gym_path, class: "btn btn-primary" %>

